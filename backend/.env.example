# API网关环境配置

# 应用配置
APP_NAME=APIGateway
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=true

# 服务器配置
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true

# 数据库配置
DATABASE_URL=postgresql+asyncpg://gateway_user:gateway_pass_2025@localhost:5432/apigateway

# Redis配置
REDIS_URL=redis://:redis_pass_2025@localhost:6379/0
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/apigateway.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=10

# EventBus配置
EVENTBUS_MAX_QUEUE_SIZE=10000
EVENTBUS_WORKER_THREADS=10

# 网关配置
GATEWAY_MAX_MESSAGE_SIZE=10485760
GATEWAY_MESSAGE_TIMEOUT=30
GATEWAY_RETRY_TIMES=3
GATEWAY_RETRY_DELAY=1

# 安全配置
SECRET_KEY=your-secret-key-change-in-production
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
ALLOWED_HOSTS=["localhost","127.0.0.1"]

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30
